{
	"name": "sah",
	"displayName": "Static Analysis Hero",
	"publisher": "usdAG",
	"description": "Bringing code-reviews to the next level",
	"icon": "src/media/logo.png",
	"version": "2.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension",
	"contributes": {
		"configuration": {
			"properties": {
				"SAH.logLevel": {
					"type": "string",
					"default": "info",
					"enum": [
						"debug",
						"info",
						"warn",
						"error",
						"off"
					],
					"description": "Log level for SAH's output channel."
				}
			}
		},
		"commands": [
			{
				"command": "extension.newProject",
				"title": "SAH: New Project"
			},
			{
				"command": "extension.loadProject",
				"title": "SAH: Load Project"
			},
			{
				"command": "extension.showMatchesList",
				"title": "SAH: Show Matches List"
			},
			{
				"command": "extension.importSemgrepScan",
				"title": "SAH: Semgrep"
			},
			{
				"command": "fileExplorer.refresh",
				"title": "SAH: Refresh File Explorer"
			},
			{
				"command": "fileExplorer.excludeFile",
				"title": "SAH: Exclude File"
			},
			{
				"command": "fileExplorer.excludeFolder",
				"title": "SAH: Exclude Folder"
			},
			{
				"command": "fileExplorer.unexcludeFile",
				"title": "SAH: Unexclude File"
			},
			{
				"command": "fileExplorer.unexcludeFolder",
				"title": "SAH: Unexclude Folder"
			},
			{
				"command": "fileExplorer.excludeFileNode",
				"title": "SAH: Exclude File"
			},
			{
				"command": "fileExplorer.excludeFolderNode",
				"title": "SAH: Exclude Folder"
			},
			{
				"command": "fileExplorer.unexcludeFileNode",
				"title": "SAH: Unexclude File"
			},
			{
				"command": "fileExplorer.unexcludeFolderNode",
				"title": "SAH: Unexclude Folder"
			},
			{
				"command": "fileExplorer.showMatchesForFolder",
				"title": "SAH: Only show Matches in this path"
			},
			{
				"command": "fileExplorer.toggleHidden",
				"title": "SAH: Hide Excluded Files"
			},
			{
				"command": "fileExplorer.toggleVisible",
				"title": "SAH: Show Excluded Files"
			},
			{
				"command": "extension.saveProject",
				"title": "SAH: Save Project"
			},
			{
				"command": "fileExplorer.showMatchesForFile",
				"title": "SAH: Only show Matches for this file"
			},
			{
				"command": "fileExplorer.resetExclusion",
				"title": "SAH: Reset the Exclusion of all files/folders"
			},
			{
				"command": "fileExplorer.resetExclusionShortText",
				"title": "SAH: Reset Excludes"
			},
			{
				"command": "extension.deduplicateMatches",
				"title": "SAH: deduplicate Matches"
			},
			{
				"command": "SAH.setLogLevelDebug",
				"title": "SAH: Set Log Level to Debug"
			},
			{
				"command": "SAH.setLogLevelInfo",
				"title": "SAH: Set Log Level to Info"
			},
			{
				"command": "SAH.setLogLevelWarn",
				"title": "SAH: Set Log Level to Warn"
			},
			{
				"command": "SAH.setLogLevelError",
				"title": "SAH: Set Log Level to Error"
			},
			{
				"command": "SAH.setLogLevelOff",
				"title": "SAH: Set Log Level to Off"
			},
			{
				"command": "extension.showHelp",
				"title": "SAH: Show Help"
			}
		],
		"keybindings": [],
		"menus": {
			"view/title": [
				{
					"command": "fileExplorer.toggleHidden",
					"when": "view == fileExplorer && fileExplorer:showExcluded",
					"group": "navigation"
				},
				{
					"command": "fileExplorer.toggleVisible",
					"when": "view == fileExplorer && !fileExplorer:showExcluded",
					"group": "navigation"
				},
				{
					"command": "fileExplorer.resetExclusionShortText",
					"when": "view == fileExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "fileExplorer.excludeFileNode",
					"when": "view == fileExplorer",
					"group": "navigation"
				},
				{
					"command": "fileExplorer.unexcludeFileNode",
					"when": "view == fileExplorer",
					"group": "navigation"
				},
				{
					"command": "fileExplorer.excludeFolderNode",
					"when": "view == fileExplorer",
					"group": "navigation"
				},
				{
					"command": "fileExplorer.unexcludeFolderNode",
					"when": "view == fileExplorer",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "fileExplorer.showMatchesForFile",
					"when": "explorerResourceIsFolder == false",
					"group": "SAH@1"
				},
				{
					"command": "fileExplorer.showMatchesForFolder",
					"when": "explorerResourceIsFolder == true",
					"group": "SAH@1"
				},
				{
					"command": "fileExplorer.excludeFile",
					"when": "explorerResourceIsFolder == false",
					"group": "SAH@2"
				},
				{
					"command": "fileExplorer.excludeFolder",
					"when": "explorerResourceIsFolder == true",
					"group": "SAH@2"
				},
				{
					"command": "fileExplorer.unexcludeFile",
					"when": "explorerResourceIsFolder == false",
					"group": "SAH@3"
				},
				{
					"command": "fileExplorer.unexcludeFolder",
					"when": "explorerResourceIsFolder == true",
					"group": "SAH@3"
				},
				{
					"command": "fileExplorer.resetExclusion",
					"group": "SAH@4"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "fileExplorer",
					"name": "File Explorer"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^20.4.2",
		"@types/vscode": "^1.40.0",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@typescript-eslint/parser": "^6.1.0",
		"eslint": "^8.57.1",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-plugin-import": "^2.18.2",
		"glob": "^10.3.3",
		"globals": "^16.3.0",
		"mocha": "^10.2.0",
		"ts-loader": "^9.4.4",
		"typescript": "^5.1.6",
		"typescript-eslint": "^8.35.1",
		"vscode-test": "^1.2.2",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/usdAG/sah"
	},
	"dependencies": {
		"axios": "^1.4.0",
		"sanitize-html": "^2.11.0",
		"vsce": "^2.15.0"
	}
}
